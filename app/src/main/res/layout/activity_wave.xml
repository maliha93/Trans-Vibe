<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eidalagbo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team15.com.transvibe.WaveActivity"
    android:background="#FFFFFF">
    <TextView
        android:id="@+id/inputshow"
        android:text="input"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/cyan"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/speedTextView"
        android:layout_toStartOf="@+id/speedTextView"
        android:onClick="speedUp"/>
    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="-"
        android:layout_alignParentBottom="true"
        android:onClick="speedDown"
        android:layout_toRightOf="@+id/speedTextView"
        android:layout_toEndOf="@+id/speedTextView" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="24dp"
        android:gravity="center"
        android:text="5x"
        android:id="@+id/speedTextView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="SPEED"
        android:layout_above="@+id/buttonMinus"
        android:layout_alignLeft="@+id/speedTextView"
        android:layout_alignStart="@+id/speedTextView"
        android:id="@+id/textView" />
</RelativeLayout>
