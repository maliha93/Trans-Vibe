<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#cceff8"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="team15.com.transvibe.input"
        tools:showIn="@layout/activity_input">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/mass"
            android:layout_marginTop="58dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/id1"
            android:layout_toEndOf="@+id/id1"
            android:textCursorDrawable="@null"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/length"
            android:layout_marginTop="64dp"
            android:layout_below="@+id/mass"
            android:layout_alignLeft="@+id/mass"
            android:layout_alignStart="@+id/mass"
            android:layout_alignRight="@+id/mass"
            android:layout_alignEnd="@+id/mass"
            android:textCursorDrawable="@null"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/tension"
            android:layout_marginTop="57dp"
            android:layout_below="@+id/length"
            android:layout_alignLeft="@+id/length"
            android:layout_alignStart="@+id/length"
            android:layout_alignRight="@+id/length"
            android:layout_alignEnd="@+id/length"
            android:textCursorDrawable="@null"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="SUBMIT"
            android:id="@+id/submit"
            android:layout_below="@+id/tension"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"
            android:textSize="30dp"
            android:onClick="onClickSubmit"
            android:textColor="#94cbdc"
            android:background="@drawable/rounded_button"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mass:        "
            android:id="@+id/id1"
            android:layout_alignBottom="@+id/mass"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Length:   "
            android:id="@+id/id2"
            android:layout_alignBottom="@+id/length"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tension: "
            android:id="@+id/id3"
            android:layout_above="@+id/submit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</ScrollView>
